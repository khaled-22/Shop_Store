@model Category


<form method="post">
    <div class="border p-3 mt-4">
      <div class="row pb-2">
          <h2 class="text-primary">Create Category</h2>
          <hr/>
      </div>
      <div class="mb-3 row">
          <label class="pd-0">Category Name</label>
          <input asp-for="Name" type="text" class="form-control" />
      </div>
        <div class="mb-3" row>
            <label>Display Order</label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type"sumbit" class="btn btn-primary form-control">CREATE</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> BACK TO LIST </a>

            </div>
        </div>
    </div>

</form>